@using System.Threading.Tasks
@using Ystervarkie.Models
@using Microsoft.Extensions.Options
@inject IOptions<AppConfiguration> AppConfiguration

<!DOCTYPE html>
<html lang="en" data-ng-app="yvApp">
<head>
    <title ng-bind="docTitle">@ViewData["Title"]</title>
    <meta name="description" content="@ViewData[" Description"]">
    <base href="/">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Ystervarkie">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="HandheldFriendly" content="true">
    <meta name="apple-touch-fullscreen" content="yes">

    <script type="text/javascript">
        var appCoreConfig = @Html.Raw(Json.Serialize(AppConfiguration.Value));
    </script>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
        <link id="load-before" rel="stylesheet" href="~/css/app.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/vendor.min.css"
              asp-fallback-href="~/css/vendor.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" asp-append-version="true" />
        <link id="load-before" rel="stylesheet" href="~/css/app.min.css" asp-fallback-href="~/css/app.css" asp-append-version="true" />
    </environment>
    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak, .ng-hide, .hidden {
            display: none !important;
        }

        .hiddenSvg {
            height: 0;
            width: 0;
            position: absolute;
            visibility: hidden;
        }
    </style>
</head>
<body id="page-top" class="{{$state.current.specialClass}}" ng-controller="CoreController as coreCtrl">
    <!--[if lt IE 10]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    @RenderBody()

    <environment include="Development">
        <!-- vendor:js -->
        <!-- endinject -->
        <!-- app:js -->
        <!-- endinject -->
    </environment>

    <environment exclude="Development">
        <script src="~/js/vendor.min.js" asp-fallback-src="~/js/vendor.js" asp-append-version="true"></script>
        <script src="~/js/templates.js" asp-append-version="true"></script>
        <script src="~/js/app.min.js" asp-fallback-src="~/js/app.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
