<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ystervarkie</title>


    <environment include="Development">
        <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
        <!-- vendor:css -->
        <!-- endinject -->
        <link id="load-before" rel="stylesheet" href="~/css/app.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/vendor.min.css"
              asp-fallback-href="~/css/vendor.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" asp-append-version="true"/>
        <link id="load-before" rel="stylesheet" href="~/css/app.min.css" asp-fallback-href="~/css/app.css" asp-append-version="true" />
    </environment>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Ystervarkie</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Ystervarkie</p>
        </footer>
    </div>

    <environment include="Development">
        <!-- vendor:js -->
        <!-- endinject -->
        <!-- app:js -->
        <!-- endinject -->
    </environment>

    <environment exclude="Development">
        <script src="~/js/vendor.min.js" asp-fallback-src="~/js/vendor.js" asp-append-version="true"></script>
        <script src="~/js/templates.js" asp-append-version="true"></script>
        <script src="~/js/app.min.js" asp-fallback-src="~/js/app.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
